<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:onClick="doNext"
        android:text="@string/next_button" />

    <Button
        android:id="@+id/skipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nextButton"
        android:layout_alignBottom="@+id/nextButton"
        android:layout_toRightOf="@+id/nextButton"
        android:onClick="doSkip"
        android:text="@string/skip_button" />

    <ImageButton
        android:id="@+id/openQrButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nextButton"
        android:layout_below="@+id/nextButton"
        android:onClick="doQRScan"
        android:src="@drawable/qrcode2_icon" />

    <TextView
        android:id="@+id/tokenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/openQrButton"
        android:layout_centerHorizontal="true"
        android:text="@string/token_label"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/statsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="doQStats"
        android:text="@string/stats_label" />

    <EditText
        android:id="@+id/qrCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tokenLabel"
        android:layout_toRightOf="@+id/openQrButton">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/commentsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/openQrButton"
        android:layout_below="@+id/openQrButton"
        android:layout_marginTop="26dp"
        android:text="@string/comments_label" />

    <Button
        android:id="@+id/prefsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="doPrefs"
        android:text="@string/prefs_label" />

    <EditText
        android:id="@+id/comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/commentsLabel"
        android:layout_toRightOf="@+id/commentsLabel"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:onClick="doEdit"
        android:text="@string/edit_label" />

    <TextView
        android:id="@+id/queueSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="0" />

    <TextView
        android:id="@+id/queueSizeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/statsButton"
        android:layout_centerHorizontal="true"
        android:text="@string/q_size"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/endWaitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/prefsButton"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="31dp"
        android:onClick="doEndWait"
        android:text="@string/end_wait_label" />

    <Button
        android:id="@+id/beginWaitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/prefsButton"
        android:layout_marginBottom="31dp"
        android:onClick="doStartWait"
        android:text="@string/begin_wait_label" />

</RelativeLayout>
